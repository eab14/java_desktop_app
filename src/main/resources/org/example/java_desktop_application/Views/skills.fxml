<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox maxWidth="240" maxHeight="240"  spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.java_desktop_application.Controllers.SkillsViewController"
      style="-fx-background-color: #e4e4e4; -fx-background-radius: 7px;"
>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Applicant Skill:" style="-fx-font-weight: bold" />
    <TextField fx:id="applicantSkill" maxWidth="200" promptText="Enter Applicant Skills" />

    <Pane minHeight="5.0" />

    <Button text="Add Skill" style="-fx-font-weight: bold" onAction="#addSkill" />

    <Pane minHeight="5.0" />

    <ListView fx:id="skillsListView" />

</VBox>