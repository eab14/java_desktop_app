<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.java_desktop_application.Controllers.ApplicantViewController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="TOP_RIGHT">
        <Label fx:id="applicantNameLabel" />
    </VBox>

    <Label text="Applicant Name:" />
    <TextField fx:id="applicantName" maxWidth="200" />

    <Label text="Applicant Phone:" />
    <TextField fx:id="applicantPhone" maxWidth="200" />

    <Label text="Applicant E-mail:" />
    <TextField fx:id="applicantEmail" maxWidth="200" />

    <Pane minHeight="10.0" />

    <HBox spacing="10.0">
        <Button text="Submit" onAction="#updateApplicant" />
        <Button text="Clear" onAction="#clearInputs" />
    </HBox>


</VBox>